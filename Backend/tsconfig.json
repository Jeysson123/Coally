{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "CommonJS",                    
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "esModuleInterop": true,                  
    "strict": true,                           
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]  
}
